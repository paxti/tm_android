<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/chatter_comment_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:requiresFadingEdge="horizontal"/>

            <TextView
                android:id="@+id/chatter_comment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="title"
                android:paddingLeft="4dp"
                android:singleLine="false"
                android:textStyle="bold"
                android:layout_marginTop="-4dp"
                android:layout_alignTop="@+id/chatter_comment_icon"
                android:layout_toEndOf="@+id/chatter_comment_icon"/>

            <TextView
                android:id="@+id/chatter_comments_content"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_below="@+id/chatter_comment_title"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/chatter_comment_icon"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
